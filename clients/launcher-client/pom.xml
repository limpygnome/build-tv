<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/maven-v4_0_0.xsd">

    <name>Build Indicator - Clients - Launcher Client</name>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.limpygnome.buildindicator</groupId>
        <artifactId>clients</artifactId>
        <version>2.0</version>
    </parent>
    <groupId>com.limpygnome.buildindicator.clients</groupId>
    <artifactId>launcher-client</artifactId>
    <packaging>jar</packaging>

    <dependencies>

        <!-- Local -->
        <dependency>
            <groupId>com.limpygnome.buildindicator.libs</groupId>
            <artifactId>daemon-lib</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- HTTP Client -->
        <dependency>
            <groupId>org.apache.httpcomponents</groupId>
            <artifactId>httpclient</artifactId>
            <version>4.5</version>
        </dependency>

        <!-- Jetty embedded web server -->
        <dependency>
            <groupId>org.eclipse.jetty</groupId>
            <artifactId>jetty-server</artifactId>
            <version>9.3.7.v20160115</version>
        </dependency>

    </dependencies>
    
    <build>
        <plugins>
        
            <!-- Builds executable JAR with dependencies included -->
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                    <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>com.limpygnome.client.launcher.Program</mainClass>
                        </manifest>
                    </archive>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                    <appendAssemblyId>false</appendAssemblyId>
                    <finalName>launcher-client</finalName>
                </configuration>
            </plugin>
            
        </plugins>
    </build>
    
</project>
