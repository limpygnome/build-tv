z#! /bin/sh

# **********************************************************************************************************************
# Main
# **********************************************************************************************************************

start()
{
    echo "Syncing time..."
    ntpd -gq &
}

case "$1" in
    start)
        start
        ;;
    stop)
        ;;
    *)
        echo "Usage: /etc/init.d/pi-sync-time {start}"
        exit 1
        ;;
esac

exit 0
